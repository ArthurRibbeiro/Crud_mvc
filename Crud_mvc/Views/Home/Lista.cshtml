@{
    ViewBag.Title = "Lista";
}
@if (@ViewData["codNome"].Equals("válido"))
{
    <script>
        document.getElementById('erroNome').style.display = "none";

    </script>
}
else
{
    <script>
        document.getElementById('erroNome').style.display = "block";

    </script>
}


<style>
    .info {
        color: white;
        padding: 20px 0px 20px;
    }

    .check {
        color: white;
        padding: 20px 0px 20px;
        width: 100%;
    }
</style>
<h2 class="text-center" style="padding:20px 0px 30px;">Visualizar</h2>

<div style="display: flex; flex-direction: column;">

    <h2 class="text-center">@ViewData["nome"] @ViewData["sobrenome"]</h2>

    <div style="display: flex; flex-direction: row; flex-wrap: nowrap; justify-content: space-around;
     background-color:dodgerblue; border-radius:50px; width:100%;">



        <div class="text-center info">
            <h3>Nome</h3>
            <p>
                @ViewData["nome"]
            </p>
            <br>
            <h3>Sobrenome</h3>
            <p>
                @ViewData["sobrenome"]
            </p>
        </div>
        <div class="text-center info">
            <h3>Data de Nascimento</h3>
            <p>
                @ViewData["nasc"]
            </p>
            <br>
            <h3>Idade</h3>
            <p>
                @ViewData["idade"]
            </p>

        </div>
        <div class="text-center info">
            <h3>Sexo</h3>
            <p>
                @ViewData["sexo"]
            </p>
            <br>
            <h3>CPF</h3>
            <p>
                @ViewData["cpf"]
            </p>
        </div>
    </div>
    <br>

    <div class="text-center" style="background-color:indianred; border-radius:50px; width:100%;">

        <h2 class="text-center" style="color:darkred">Cadastro Inválido</h2>

        <div style="display: flex; flex-direction: row; flex-wrap: nowrap; justify-content: space-around;">

            
            <div class="text-center check" id="erroNome">
                <p>Nome</p>
                <p>
                    @ViewData["codNome"]
                </p>
            </div>

            <div class="text-center check" id="erroSobrenome">
                <p>Sobrenome</p>
                <p>
                    @ViewData["codSobrenome"]
                </p>
            </div>          


            <div class="text-center check" id="erroNasc">
                <p>Data de Nascimento</p>
                <p>
                    @ViewData["codNasc"]
                </p>

            </div>

            <div class="text-center check" id="erroCPF">
                <p>CPF</p>
                <p>
                    @ViewData["codCPF"]
                </p>
            </div>

        </div>

        <input class="text-center btn" type="button" value="Novo Cadastro">
    </div>

    <div style="display: flex; flex-direction: row; flex-wrap: nowrap; justify-content: space-around;
     background-color:lightgreen; border-radius:50px; width:100%;">

        <h2 style="color:green">Cadastro válido</h2>


    </div>


</div>

<script>

    if ('@ViewData["codNome"]' == ("Válido")) {
        alert('aaaaaa')
        //document.getElementById('erroNome').style.display = "none";
    }
   

</script>